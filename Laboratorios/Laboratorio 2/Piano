static const uint8_t B1_dur[]  = { 4,  4,  7  };
static const uint8_t B2_note[] = { F5, A5, B5 };
static const uint8_t B2_dur[]  = { 4,  4,  7  };
static const uint8_t B3_note[] = { F5, A5, B5, E6, D6 };
static const uint8_t B3_dur[]  = { 4,  4,  5,  4,  10 };
