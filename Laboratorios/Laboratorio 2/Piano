static const Line LINES_B[] = {
 {B1_note,B1_dur,sizeof(B1_note)}, {B2_note,B2_dur,sizeof(B2_note)},
  {B3_note,B3_dur,sizeof(B3_note)}, {B4_note,B4_dur,sizeof(B4_note)},
  {B5_note,B5_dur,sizeof(B5_note)}
